# Configuración de Ejemplo - Hexzor Subscription Manager
# Copia este archivo como .env y configura las variables

# Entorno de ejecución
NODE_ENV=production
PORT=3001

# Base de Datos PostgreSQL
# Formato: postgresql://usuario:contraseña@host:puerto/basededatos
DATABASE_URL=postgresql://hexzor_user:tu_password_aqui@localhost:5432/hexzor_subscriptions

# JWT Secret (generar uno único y seguro)
JWT_SECRET=tu_jwt_secret_muy_seguro_aqui

# Configuración de Email (SMTP)
# Para Gmail con contraseña de aplicación:
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=tu-email@gmail.com
SMTP_PASS=tu-password-de-aplicacion

# Para otros proveedores, ajustar según corresponda:
# SMTP_HOST=smtp.mailgun.org
# SMTP_PORT=587
# SMTP_USER=postmaster@tu-dominio.com
# SMTP_PASS=tu-api-key

EMAIL_FROM=noreply@hexzor.com
EMAIL_FROM_NAME=Hexzor Support

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutos
RATE_LIMIT_MAX_REQUESTS=100

# Configuración de Seguridad
TRUST_PROXY=1

# URLs (reemplazar IP_DEL_SERVIDOR con la IP real)
FRONTEND_URL=http://IP_DEL_SERVIDOR:3001
ADMIN_PANEL_URL=http://IP_DEL_SERVIDOR:3001/admin

# Si tienes dominio, usar algo como:
# FRONTEND_URL=https://api.tu-dominio.com
# ADMIN_PANEL_URL=https://admin.tu-dominio.com

# Configuración de Logs
LOG_LEVEL=info
LOG_TO_FILE=true

# Configuración de Notificaciones (opcional)
NOTIFY_ADMIN_ON_ACCESS=false
ADMIN_EMAIL=admin@hexzor.com

# Configuración de Backups (opcional)
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Diario a las 2 AM